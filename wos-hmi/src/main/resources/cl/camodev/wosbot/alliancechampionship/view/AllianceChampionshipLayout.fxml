<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="14" styleClass="events-content">
                    <children>
                        <!-- Alliance Championship Section -->
                        <VBox spacing="0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#47b3ff, #1a7cff); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxEnableChampionship" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Enable Alliance Championship" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" styleClass="card-body">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Deploy troops to Alliance Championship with customizable formation and position" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Deployment Settings -->
                                        <VBox spacing="8" styleClass="priority-section">
                                            <children>
                                                <Label style="-fx-text-fill: #b5b5b5; -fx-font-weight: bold;" text="Deployment Configuration" />

                                                <CheckBox fx:id="checkBoxOverrideCurrentDeploy" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Override current deployment" />

                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Position" minWidth="100.0" />
                                                        <ComboBox fx:id="comboBoxPosition" prefWidth="150.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Troop Distribution -->
                                        <VBox spacing="8" styleClass="priority-section">
                                            <children>
                                                <Label style="-fx-text-fill: #b5b5b5; -fx-font-weight: bold;" text="Troop Distribution (%)" />

                                                <GridPane hgap="16" vgap="12">
                                                    <columnConstraints>
                                                        <ColumnConstraints percentWidth="33.33" />
                                                        <ColumnConstraints percentWidth="33.33" />
                                                        <ColumnConstraints percentWidth="33.34" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints />
                                                    </rowConstraints>
                                                    <children>
                                                        <VBox spacing="6" GridPane.columnIndex="0">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Infantry" />
                                                                <TextField fx:id="textfieldInfantryPercentage" prefWidth="80.0" promptText="33" />
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="6" GridPane.columnIndex="1">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Lancers" />
                                                                <TextField fx:id="textfieldLancersPercentage" prefWidth="80.0" promptText="33" />
                                                            </children>
                                                        </VBox>

                                                        <VBox spacing="6" GridPane.columnIndex="2">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Marksmans" />
                                                                <TextField fx:id="textfieldMarksmansPercentage" prefWidth="80.0" promptText="34" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </GridPane>

                                                <Label style="-fx-font-size: 10px; -fx-text-fill: #ffcc00; -fx-font-style: italic;" text="Note: Total percentage must equal 100%. Task runs weekly: Monday 00:01 - Wednesday 22:55 UTC." wrapText="true" />
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
