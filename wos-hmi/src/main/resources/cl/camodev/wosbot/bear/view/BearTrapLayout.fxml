<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" styleClass="sidebar-scroll">
            <content>
                <VBox spacing="14" styleClass="events-content">
                    <children>
                        <!-- Bear Trap Section -->
                        <VBox spacing="0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#ffd966, #ff8c1a); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxEnableBearTrap" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Enable Bear Trap" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" styleClass="card-body">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Automate Bear Trap event with scheduled preparation and rally management." wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Trap Schedule Section -->
                                        <VBox spacing="8" styleClass="priority-section">
                                            <children>
                                                <Label style="-fx-text-fill: #b5b5b5; -fx-font-weight: bold;" text="Trap Schedule" />

                                                <VBox spacing="6">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Next Bear Trap (UTC)" />
                                                        <TextField fx:id="textFieldScheduleDateTime" promptText="dd-MM-yyyy HH:mm" />
                                                        <Label fx:id="labelDateTimeError" style="-fx-font-size: 11px; -fx-text-fill: #ff4444;" text="" wrapText="true" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="6">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Preparation Time (minutes)" />
                                                        <TextField fx:id="textFieldPreparationTime" prefWidth="100.0" promptText="5" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Preparation Section -->
                                        <VBox spacing="8" styleClass="priority-section">
                                            <children>
                                                <Label style="-fx-text-fill: #b5b5b5; -fx-font-weight: bold;" text="Preparation" />

                                                <CheckBox fx:id="checkBoxActivePets" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Active Pets" />
                                                <CheckBox fx:id="checkBoxRecallTroops" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Recall Gather Troops" />
                                            </children>
                                        </VBox>

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <!-- Trap Configuration Section -->
                                        <VBox spacing="8" styleClass="priority-section">
                                            <children>
                                                <Label style="-fx-text-fill: #b5b5b5; -fx-font-weight: bold;" text="Trap Configuration" />

                                                <!-- Trap Selection -->
                                                <HBox alignment="CENTER_LEFT" spacing="10">
                                                    <children>
                                                        <Label style="-fx-text-fill: #e5e5e5;" text="Trap Number" minWidth="100.0" />
                                                        <ComboBox fx:id="comboBoxTrapNumber" prefWidth="100.0" />
                                                    </children>
                                                </HBox>

                                                <!-- Call Rally -->
                                                <VBox spacing="6">
                                                    <children>
                                                        <CheckBox fx:id="checkBoxCallRally" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Call Own Rally" />
                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Rally Flag" minWidth="100.0" />
                                                                <ComboBox fx:id="comboBoxRallyFlag" prefWidth="100.0" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>
                                                    </children>
                                                </VBox>

                                                <!-- Join Rally -->
                                                <VBox spacing="6">
                                                    <children>
                                                        <CheckBox fx:id="checkBoxEnableJoin" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Enable Join Rally" />
                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Join Flag" minWidth="100.0" />
                                                                <ComboBox fx:id="comboBoxJoinFlag" prefWidth="100.0" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>
                                                    </children>
                                                </VBox>

                                                <Label style="-fx-font-size: 10px; -fx-text-fill: #ffcc00; -fx-font-style: italic;" text="Note: Gather and Autojoin tasks will be automatically rescheduled after the event ends to resume normal operations." wrapText="true" />
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
