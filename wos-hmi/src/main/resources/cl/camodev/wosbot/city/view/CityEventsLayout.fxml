<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="14" styleClass="events-content">
                    <children>
                        <!-- Daily Missions & Rewards -->
                        <VBox spacing="0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#ffd966, #ffaa00); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Daily Missions &amp; Rewards" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" styleClass="card-body">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Automate daily mission claims and reward collection" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0;" />

                                        <GridPane styleClass="priority-section">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="50.0" />
                                                <ColumnConstraints percentWidth="50.0" />
                                            </columnConstraints>
                                            <children>
                                                <VBox spacing="8" GridPane.columnIndex="0">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Daily Missions" />
                                                        <CheckBox fx:id="checkBoxDailyMission" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim daily missions" />

                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label minWidth="100.0" style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldDailyMissionOffset" prefWidth="100.0" promptText="0" />
                                                                <Label style="-fx-text-fill: #888;" text="minutes" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>

                                                        <CheckBox fx:id="checkBoxAutoScheduleDailyMission" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Auto schedule daily mission claim" />

                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Mail" />
                                                        <CheckBox fx:id="checkBoxMailRewards" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim mail rewards" />

                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label minWidth="100.0" style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldMailOffset" prefWidth="100.0" promptText="0" />
                                                                <Label style="-fx-text-fill: #888;" text="minutes" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>

                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Hero Recruitment" />
                                                        <CheckBox fx:id="checkBoxHeroRecruitment" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Open recruitment hero chests" />

                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="City Resources" />
                                                        <CheckBox fx:id="checkBoxExplorationChest" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim exploration chest" />

                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label minWidth="100.0" style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldExplorationOffset" prefWidth="100.0" promptText="0" />
                                                                <Label style="-fx-text-fill: #888;" text="minutes" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>

                                                        <CheckBox fx:id="checkBoxStorehouseChest" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim storehouse chests + stamina" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8" GridPane.columnIndex="1">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="VIP" />
                                                        <CheckBox fx:id="checkBoxDailyVipRewards" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim daily VIP rewards" />
                                                        <CheckBox fx:id="checkBoxBuyMonthlyVip" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Buy monthly VIP (10k gems)" />

                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Exploration Activities" />
                                                        <CheckBox fx:id="checkBoxDailyLabyrinth" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Complete daily labyrinth" />
                                                        <CheckBox fx:id="checkBoxTrekSupplies" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim Trek Supplies" />
                                                        <CheckBox fx:id="checkBoxTrekAutomation" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Tundra Trek Automation" />
                                                    </children>
                                                </VBox>
                                            </children>
                                 <rowConstraints>
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Life Essence -->
                        <VBox spacing="0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#a8e6cf, #dcedc8); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxLifeEssence" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Claim Life Essence" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" styleClass="card-body">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Manage life essence collection and weekly purchases" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0" />

                                        <GridPane styleClass="priority-section">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="50.0" />
                                                <ColumnConstraints percentWidth="50.0" />
                                            </columnConstraints>
                                            <children>
                                                <VBox spacing="8" GridPane.columnIndex="0">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Life Essence Settings" />
                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label minWidth="100.0" style="-fx-text-fill: #e5e5e5;" text="Offset Time:" />
                                                                <TextField fx:id="textfieldLifeEssenceOffset" prefWidth="100.0" promptText="0" />
                                                                <Label style="-fx-text-fill: #888;" text="minutes" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>

                                                        <CheckBox fx:id="checkBoxWeeklyScroll" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Buy weekly scroll" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8" GridPane.columnIndex="1">
                                                    <children>
                                                    </children>
                                                </VBox>
                                            </children>
                                 <rowConstraints>
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>

                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #ffcc00; -fx-font-style: italic;" text="Note: If you have Timbermill, it should be near the tree so both are collected when the task runs." wrapText="true" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Fire Crystal Tasks -->
                        <VBox spacing="0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#e74c3c, #c0392b); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Fire Crystal Tasks" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" styleClass="card-body">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Manage fire crystal research and refinement tasks" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0" />

                                        <GridPane styleClass="priority-section">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="50.0" />
                                                <ColumnConstraints percentWidth="50.0" />
                                            </columnConstraints>
                                            <children>
                                                <VBox spacing="8" GridPane.columnIndex="0">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Crystal Refinement" />
                                                        <CheckBox fx:id="checkBoxCrystalLabFC" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim crystal lab FC" />
                                                        <CheckBox fx:id="checkBoxDailyDiscountedRFC" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim daily 50% RFC" />

                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label style="-fx-text-fill: #e5e5e5;" text="Monday refinement:" />
                                                                <ComboBox fx:id="comboBoxMondayRefinements" prefWidth="100.0" />
                                                            </children>
                                                            <padding>
                                                                <Insets left="20.0" />
                                                            </padding>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                                <VBox spacing="8" GridPane.columnIndex="1">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="War Academy" />

                                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0" />

                                                        <CheckBox fx:id="checkBoxWarAcademyShards" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Claim war academy crystal shards" />
                                                    </children>
                                                </VBox>
                                            </children>
                                 <rowConstraints>
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>

                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #ffcc00; -fx-font-style: italic;" text="Note: Monday refinement setting affects weekly crystal refinement claims. Use with caution." wrapText="true" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Combat & Arena -->
                        <VBox spacing="0" styleClass="card">
                            <children>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" style="-fx-background-color: linear-gradient(#e67e22, #ca6f1e); -fx-background-radius: 8 8 0 0; -fx-padding: 8 12;">
                                    <children>
                                        <CheckBox fx:id="checkBoxArena" mnemonicParsing="false" style="-fx-font-weight: bold; -fx-text-fill: #1c1c1c;" text="Enable Arena" />
                                    </children>
                                </HBox>
                                <VBox spacing="8" styleClass="card-body">
                                    <children>
                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #b5b5b5;" text="Configure arena battles and combat activities" wrapText="true" />

                                        <Separator style="-fx-opacity: 0.3; -fx-padding: 4 0" />

                                        <GridPane styleClass="priority-section">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="50.0" />
                                                <ColumnConstraints percentWidth="50.0" />
                                            </columnConstraints>
                                            <children>
                                                <VBox spacing="6" GridPane.columnIndex="0">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Arena Settings" />
                                                        <CheckBox fx:id="checkBoxArenaRefreshWithGems" mnemonicParsing="false" style="-fx-text-fill: #e5e5e5;" text="Refresh with gems" />

                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label minWidth="100.0" style="-fx-text-fill: #e5e5e5;" text="Extra attempts:" />
                                                                <ComboBox fx:id="comboBoxArenaExtraAttempts" prefWidth="100.0" />
                                                            </children>
                                                        </HBox>

                                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                                            <children>
                                                                <Label minWidth="100.0" style="-fx-text-fill: #e5e5e5;" text="Activation time (UTC):" />
                                                                <TextField fx:id="textFieldArenaActivationHour" prefWidth="100.0" promptText="HH:mm" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                                <VBox spacing="6" GridPane.columnIndex="1">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #e5e5e5;" text="Messages" />
                                                        <Label fx:id="labelDateTimeError" style="-fx-font-size: 11px; -fx-text-fill: #ff4444;" text="" wrapText="true" />
                                                    </children>
                                                </VBox>
                                            </children>
                                 <rowConstraints>
                                    <RowConstraints />
                                 </rowConstraints>
                                        </GridPane>

                                        <Label style="-fx-font-size: 10px; -fx-text-fill: #ffcc00; -fx-font-style: italic;" text="Note: The cutoff time is 23:55. If a time greater than that is configured, it will fail." wrapText="true" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
