<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="508.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <!-- stylesheets removidos; la app aplica el CSS global vía FXApp -->

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
   
    <rowConstraints>
        <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>

        <HBox fillHeight="true" spacing="0">
            <children>
                <!-- Estructura modificada: logo y combo fijos arriba; el ScrollPane solo envuelve buttonsContainer -->
                <VBox prefHeight="356.0" prefWidth="170.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <ImageView fitHeight="89.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../../../icons/wos-logo.png" />
                                    </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                                </ImageView>
                                <Label text="Loaded profile" />
                                <ComboBox fx:id="profileComboBox" styleClass="combo-dark">
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin></ComboBox>
                            </children>
                        </VBox>
                        <!-- Línea horizontal de 1px en lugar del Separator -->
                        <Region maxHeight="1.0" maxWidth="1.7976931348623157E308" minHeight="1.0" prefHeight="1.0" style="-fx-background-color: #20202D;" />
                        <!-- Ahora el ScrollPane solo contiene el VBox de botones -->
                        <ScrollPane fx:id="sidebarScroll" fitToHeight="false" fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="sidebar-scroll" vbarPolicy="AS_NEEDED">
                            <content>
                                <VBox fx:id="buttonsContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                 <!-- Línea vertical de 1px entre el panel lateral y el panel principal -->
                 <Region maxHeight="1.7976931348623157E308" maxWidth="1.0" minWidth="1.0" prefWidth="1.0" style="-fx-background-color: #20202D;" />

                 <AnchorPane fx:id="mainContentPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                     <!-- Márgenes mínimos -->
                     <HBox.margin>
                         <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
                     </HBox.margin>
                <padding>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                 </AnchorPane>
             </children>
             <HBox.margin>
                 <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
             </HBox.margin>
         </HBox>

         <GridPane fx:id="bottomBar" GridPane.rowIndex="1">
             <columnConstraints>
                 <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                 <ColumnConstraints />
             </columnConstraints>
             <rowConstraints>
                 <RowConstraints vgrow="SOMETIMES" />
                 <RowConstraints />
             </rowConstraints>
             <children>
                 <!-- Version label on the left -->
                 <Label fx:id="labelVersion" text="Whiteout Survival Bot v" GridPane.columnIndex="0">
                     <GridPane.margin>
                         <Insets left="8.0" />
                     </GridPane.margin>
                 </Label>
                 <!-- Controls aligned to the right -->
                 <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1">
                     <GridPane.margin>
                         <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </GridPane.margin>
                     <children>
                         <Label fx:id="labelRunTime" />
                         <GridPane>
                             <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                             </columnConstraints>
                             <rowConstraints>
                                 <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                             </rowConstraints>
                             <children>
                                 <!-- Pausa a la izquierda (col 0) -->
                                 <SplitMenuButton fx:id="buttonPauseResume" disable="true" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" text="Pause">
                                     <items>
                                         <MenuItem fx:id="menuToggleCurrentQueue" text="Pause current queue" />
                                         <MenuItem fx:id="menuToggleAllQueues" text="Pause all queues" />
                                     </items>
                                     <GridPane.margin>
                                         <Insets bottom="3.0" left="3.0" right="1.5" top="3.0" />
                                     </GridPane.margin>
                                 </SplitMenuButton>
                                 <!-- Start a la derecha (col 1) -->
                                 <Button fx:id="buttonStartStop" disable="true" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" styleClass="start-button" text="Start Bot" GridPane.columnIndex="1">
                                     <GridPane.margin>
                                         <Insets bottom="3.0" left="1.5" right="3.0" top="3.0" />
                                     </GridPane.margin>
                                 </Button>
                             </children>
                         </GridPane>
                     </children>
                 </HBox>
             </children>
             <GridPane.margin>
                 <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
             </GridPane.margin>
         </GridPane>
     </children>
 </GridPane>
